<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:background="#FFFFFF"
    >

    <View
        android:id="@+id/task_label"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_width="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/task_hours_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="3:00"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            />
        <CheckBox
            android:id="@+id/task_completed_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/task_label"
        android:layout_toEndOf="@+id/task_label"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_title_tv"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="단어 100개 외우기"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_completed_date_tv"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="2016/10/12"
            />
    </LinearLayout>
</RelativeLayout>