<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/goal_card_item_margin"
    android:layout_marginLeft="@dimen/goal_card_item_margin"
    android:layout_marginRight="@dimen/goal_card_item_margin"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:contentPadding="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/shared_goal_item_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="모든 영화 자막 없이 보기"
                android:textAppearance="?android:textAppearanceMedium"
                />
            <TextView
                android:id="@+id/shared_goal_item_need_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000hr 시간 필요"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/shared_goal_item_like_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_black_24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shared_goal_item_like_tv"
                android:text="11"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
